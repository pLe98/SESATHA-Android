<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg30"
    android:id="@+id/drawerLayout"

    tools:context=".DemoActivity" >
    <!-- change  tools:context=".DemoActivity"  -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mytoolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bgdark"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:elevation="0dp"/>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- code starts here -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/purple_200"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Ambrella"
                            android:layout_marginTop="0dp"
                            android:textColor="#ffff"
                            android:textSize="35dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/product"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Quantitiy"
                            android:layout_marginLeft="10dp"


                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/product"
                            android:layout_toRightOf="@id/quantity"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="5"
                            android:textColor="@color/white"

                            />
                        <TextView
                            android:id="@+id/totPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantity"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Total Price ="
                            android:textColor="@color/white"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/totPrice"
                            android:layout_below="@id/quantity"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="5000.00"
                            android:textColor="@color/white"

                            />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="75dp"
                            android:src="@drawable/ic_launcher_background"
                            android:layout_alignParentRight="true"
                            android:lay="@id/quantity"
                            android:layout_margin="10dp"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!-- code ends here -->


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/side_navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/sidenavi_header"
        >

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>