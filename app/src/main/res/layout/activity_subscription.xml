<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgStyle2"
    tools:context=".subscriptionActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/roundedcorner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/TVtransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:text="Choose a Subscription Plan"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <!-- s1 -->

        <ImageView
            android:id="@+id/IVadboost1"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/TVtransaction"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/adboostpng" />

        <ImageView
            android:id="@+id/IVplus1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/TVtransaction"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/plus" />


        <TextView
            android:id="@+id/TVsubs1"
            style="@style/transhistry_subtype"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVtransaction"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/IVadboost1"
            android:text="Promote Listing"
            android:textColor="#000000"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/TVtrans1_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVsubs1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/IVadboost1"
            android:text="LKR 2000.00 for 7 days"
            android:textColor="#000000"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/hbar1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVtrans1_amount"
            android:paddingTop="20dp"
            android:layout_marginLeft="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/line"/>


        <ImageView
            android:id="@+id/IVadboost3"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/hbar1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/adboostpng" />

        <ImageView
            android:id="@+id/IVplus2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/hbar1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/TVsubs3"
            style="@style/transhistry_subtype"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hbar1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/IVadboost1"
            android:text="Promote Listing"
            android:textColor="#000000"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/TVtrans1_amoun3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVsubs3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/IVadboost1"
            android:text="LKR 2000.00 for 14 days"
            android:textColor="#000000"
            android:textSize="20dp" />



        <ImageView
            android:id="@+id/hbar2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVadboost3"
            android:paddingTop="25dp"
            android:layout_marginLeft="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/line"/>



        <ImageView
            android:id="@+id/IVadboost4"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/hbar2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/adboostpng" />

        <ImageView
            android:id="@+id/IVplus3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/hbar2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/TVsubs4"
            style="@style/transhistry_subtype"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hbar2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/IVadboost1"
            android:text="Promote Listing"
            android:textColor="#000000"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/TVtrans1_amoun4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVsubs4"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/IVadboost1"
            android:text="LKR 2000.00 for a month"
            android:textColor="#000000"
            android:textSize="20dp" />

        <!-- s2 -->



        <ImageView
            android:id="@+id/hbar3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IVadboost4"
            android:paddingTop="25dp"
            android:layout_marginLeft="48dp"
            android:scaleType="fitXY"
            android:src="@drawable/line"/>


        <ImageView
            android:id="@+id/IVadboost2"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/hbar3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/subscription" />

        <ImageView
            android:id="@+id/IVplus4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/hbar3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/TVsubs2"
            style="@style/transhistry_subtype"
            android:layout_below="@+id/hbar3"
            android:layout_toRightOf="@+id/IVadboost1"
            android:text="Official Store" />


        <TextView
            android:id="@+id/TVtrans2_amount"
            style="@style/transhistry_amount"
            android:layout_marginBottom="80dp"
            android:layout_below="@+id/TVsubs2"
            android:layout_toRightOf="@+id/IVadboost4"
            android:text="LKR 2000.00/month" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscriptions"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />


</androidx.constraintlayout.widget.ConstraintLayout>