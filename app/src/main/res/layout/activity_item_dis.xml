
<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg30"
android:id="@+id/drawerLayout"

tools:context=".ItemDis" >
<!-- change  tools:context=".DemoActivity"  -->


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mytoolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bgdark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:elevation="0dp"/>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- code starts here -->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="207dp"
            android:layout_height="316dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/i1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="189dp"
            android:layout_height="57dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:text="@string/wood_lantern"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/product_dis"
            android:layout_width="319dp"
            android:layout_height="91dp"
            android:layout_marginTop="88dp"
            android:text="@string/a_great_decoration_for_your_home_decorative_candle_lantern_great_ideal_for_the_tabletop_shelf_stairs_pathway_wall_patio_porch_etc_outdoor_or_indoor_hanging_lantern_the_round_loop_allow_you_to_hang_them_on_the_tree_or_hook_the_brown_wood_metal_coating_creates_an_farmhouse_style_will_be_an_attractive_home_decoration_for_wedding_party_halloween_and_christmas"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/price_tag"
            android:layout_width="38dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:text="@string/price"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/product_dis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.581"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/price"
            android:layout_width="99dp"
            android:layout_height="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="52dp"

            android:text="@string/lkr_00000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/product_dis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/price_tag"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.275" />

        <Button
            android:id="@+id/add_to_cart"
            android:layout_width="157dp"
            android:layout_height="56dp"
            android:layout_below="@+id/loginPassword"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/mainclr"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Add to Cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.854"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.936" />

        <ImageView
            android:id="@+id/minus"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/add_to_cart"
            app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/minus" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/add_to_cart"
            app:layout_constraintHorizontal_bias="0.605"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/plus" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_marginBottom="56dp"
            android:text="0"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/minus" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Store Name"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/price_tag"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <!-- code ends here -->
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:menu="@menu/side_navigation_menu"
    android:layout_gravity="start"
    app:headerLayout="@layout/sidenavi_header"
    >

</com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>