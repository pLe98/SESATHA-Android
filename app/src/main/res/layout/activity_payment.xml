<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentActivity"
    android:background="@drawable/bgStyle2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:text="My Payments"/>

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="190dp"
            android:background="@drawable/card_visa">

            <ImageButton
                android:id="@+id/BTeditCard"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:paddingTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/BTtrash"
                android:scaleType="fitXY"
                android:background="transparent"
                android:src="@drawable/editcard"/>

            <ImageButton
                android:id="@+id/BTtrash"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:paddingTop="9dp"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:background="transparent"
                android:src="@drawable/trash"/>


            <TextView
                android:id="@+id/TVcardNo"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:paddingTop="102dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:text="XXXX XXXX XXXX 3456" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcorner"
            android:layout_marginTop="50dp"
            android:layout_gravity="bottom">



            <TextView
                android:id="@+id/TVtransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:textStyle="bold"
                android:text="Transaction History"
                android:textSize="30dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"/>

            <!-- s1 -->

            <ImageView
                android:id="@+id/IVadboost1"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/TVtransaction"
                android:src="@drawable/adboostpng"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/TVsubs1"
                style="@style/transhistry_subtype"
                android:layout_below="@+id/TVtransaction"
                android:layout_toRightOf="@+id/IVadboost1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:textColor= "#000000"
                android:textSize="25dp"
                android:text="Promote Listing"/>

            <TextView
                android:id="@+id/TVtrans1_date"
                android:layout_below="@+id/TVtransaction"
                android:layout_toRightOf="@+id/TVsubs1"
                style="@style/transhistry_date"
                android:text="12-02-2020"/>

            <TextView
                android:id="@+id/TVtrans1_amount"
                android:layout_below="@+id/TVtrans1_date"
                android:layout_toRightOf="@+id/IVadboost1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="LKR 2000.00"/>

            <TextView
                android:id="@+id/TVtrans1_month"
                android:layout_below="@+id/TVtrans1_date"
                android:layout_alignParentRight="true"
                style="@style/transhistry_month"
                android:text="Month - February"/>




            <!-- s2 -->

            <ImageView
                android:id="@+id/IVadboost2"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/IVadboost1"
                android:src="@drawable/subscription"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/TVsubs2"
                style="@style/transhistry_subtype"
                android:layout_below="@+id/IVadboost1"
                android:layout_toRightOf="@+id/IVadboost1"
                android:text="Promote Listing"/>

            <TextView
                android:id="@+id/TVtrans2_date"
                android:layout_below="@+id/TVtrans1_amount"
                style="@style/transhistry_date"
                android:text="12-02-2020"/>

            <TextView
                android:id="@+id/TVtrans2_amount"
                android:layout_below="@+id/TVsubs2"
                android:layout_toRightOf="@+id/IVadboost2"
                style="@style/transhistry_amount"
                android:text="LKR 2000.00"/>

            <TextView
                android:id="@+id/TVtrans2_month"
                android:layout_below="@+id/TVtrans2_date"
                android:layout_alignParentRight="true"
                style="@style/transhistry_month"
                android:text="7 Days"/>


            <!-- s3 -->

            <ImageView
                android:id="@+id/IVadboost3"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/IVadboost2"
                android:src="@drawable/subscription"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/TVsubs3"
                style="@style/transhistry_subtype"
                android:layout_below="@+id/IVadboost2"
                android:layout_toRightOf="@+id/IVadboost1"
                android:text="Promote Listing"/>

            <TextView
                android:id="@+id/TVtrans3_date"
                android:layout_below="@+id/TVtrans2_amount"
                style="@style/transhistry_date"
                android:text="12-02-2020"/>

            <TextView
                android:id="@+id/TVtrans3_amount"
                android:layout_below="@+id/TVsubs3"
                style="@style/transhistry_amount"
                android:layout_toRightOf="@+id/IVadboost3"
                android:text="LKR 2000.00"/>

            <TextView
                android:id="@+id/TVtrans3_month"
                android:layout_below="@+id/TVtrans3_date"
                android:layout_alignParentRight="true"
                style="@style/transhistry_month"
                android:text="Month - January"/>

            <!-- s4 -->

            <ImageView
                android:id="@+id/IVadboost4"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/IVadboost3"
                android:src="@drawable/adboostpng"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/TVsubs4"
                style="@style/transhistry_subtype"
                android:layout_below="@+id/IVadboost3"
                android:layout_toRightOf="@+id/IVadboost1"
                android:text="Promote Listing"/>

            <TextView
                android:id="@+id/TVtrans4_date"
                android:layout_below="@+id/TVtrans3_amount"
                style="@style/transhistry_date"
                android:text="12-02-2020"/>

            <TextView
                android:id="@+id/TVtrans4_amount"
                android:layout_below="@+id/TVsubs4"
                style="@style/transhistry_amount"
                android:layout_toRightOf="@+id/IVadboost4"
                android:text="LKR 2000.00"/>

            <TextView
                android:id="@+id/TVtrans4_month"
                android:layout_below="@+id/TVtrans4_date"
                android:layout_alignParentRight="true"

                style="@style/transhistry_month"
                android:text="7 Days"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVtrans4_month"
                android:text="   "
                android:paddingBottom="30dp"/>



        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>