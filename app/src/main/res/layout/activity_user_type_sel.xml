<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userTypeSelActivity"
    android:background="@drawable/bgStyle2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TVregisterType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Register"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/sellerLayout"
            android:layout_below="@id/TVregisterType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:padding="30dp"
            android:background="#8c6498a1">

            <ImageButton
                android:id="@+id/BTsellerimg"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/seller" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/BT1seller"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="0dp"
                    android:background="transparent"
                    android:textSize="25dp"
                    android:text="I'm a"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_below="@id/BT1seller"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:background="transparent"
                    android:layout_marginTop="0dp"
                    android:paddingTop="0dp"
                    android:textSize="35dp"
                    android:text="Seller"
                    android:textAllCaps="false"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buyerLayout"
            android:layout_below="@id/sellerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:padding="30dp"
            android:background="#8c6498a1">

            <ImageButton
                android:id="@+id/BTbuyerimg"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/buyer" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/BT1buyer"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="0dp"
                    android:background="transparent"
                    android:textSize="25dp"
                    android:text="I'm a"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_below="@id/BT1buyer"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:background="transparent"
                    android:layout_marginTop="0dp"
                    android:paddingTop="0dp"
                    android:textSize="35dp"
                    android:text="Buyer"
                    android:textAllCaps="false"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>