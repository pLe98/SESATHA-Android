<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sql"
    android:background="@drawable/bg30"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mytoolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bgdark"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:elevation="0dp"/>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:paddingTop="40dp"
            android:layout_marginBottom="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:gravity="center"
            android:id="@+id/sql_hdr"
            android:text="Test"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="Name : "
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="306dp"
                android:id="@+id/input_name"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Name"
                android:textColorHint="@color/editBtnColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="Description : "
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="306dp"
                android:id="@+id/input_desc"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Desc"
                android:textColorHint="@color/editBtnColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="Price : "
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="306dp"
                android:inputType="numberDecimal"
                android:id="@+id/input_price"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Price"
                android:textColorHint="@color/editBtnColor" />
        </LinearLayout>

        <Button
            android:id="@+id/db_view"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/bgpink"
            android:text="View All"/>

        <Button
            android:id="@+id/db_create"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/bgpink"
            android:text="Create"/>

        <Button
            android:id="@+id/db_edit"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/bgpink"
            android:text="Edit"/>

        <Button
            android:id="@+id/db_delete"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/bgpink"
            android:text="Delete"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/activity_main_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/side_navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/sidenavi_header"
        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>